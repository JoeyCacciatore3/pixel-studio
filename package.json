{
  "name": "pixel-studio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepare": "husky install",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf .next out dist coverage node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules",
    "check": "npm run validate && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:browser": "playwright test browser-compatibility",
    "test:e2e:mobile": "playwright test mobile-touch",
    "test:e2e:tools": "playwright test tools",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile-safari": "playwright test --project=\"Mobile Safari\"",
    "test:e2e:mobile-chrome": "playwright test --project=\"Mobile Chrome\"",
    "test:e2e:report": "playwright show-report",
    "test:e2e:full-report": "tsx scripts/run-all-tests-and-report.ts",
    "test:e2e:mcp": "tsx scripts/mcp-test-runner.ts",
    "test:e2e:mcp:affected": "tsx scripts/mcp-test-runner.ts --affected",
    "test:e2e:generate": "tsx scripts/mcp-test-generator.ts",
    "test:e2e:report:mcp": "tsx scripts/mcp-report-generator.ts",
    "test:e2e:safe": "tsx scripts/run-tests-safely.ts",
    "test:e2e:chromium-only": "tsx scripts/run-tests-safely.ts --project=chromium",
    "test:e2e:all-safe": "tsx scripts/run-tests-safely.ts --all-projects"
  },
  "dependencies": {
    "next": "^16.0.9",
    "next-pwa": "^5.6.0",
    "perfect-freehand": "^1.0.26",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.0.9",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
